<?xml version="1.0" encoding="UTF-8"?>

<rdf:RDF xmlns:ns1="http://www.w3.org/2002/07/owl#" xmlns:ns2="http://www.w3.org/2000/01/rdf-schema#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:owl="http://www.w3.org/2002/07/owl#" xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#" xmlns:swrl="http://www.w3.org/2003/11/swrl#" xmlns:swrlb="http://www.w3.org/2003/11/swrlb#" xmlns="http://www.iec.ch/TC57/CIM#" xml:base="http://www.iec.ch/TC57/CIM">
	<ns1:Ontology rdf:about="http://www.iec.ch/TC57/CIM#">
		<ns1:imports rdf:resource="TheCimOntology.owl" />
		<ns2:comment>Generated OWL rules for CIM ontology validation and reasoning</ns2:comment>
	</ns1:Ontology>
	<ns1:Class rdf:about="http://www.iec.ch/TC57/CIM#ConductingEquipment">
		<!--规则 1: 每个导电设备必须至少有一个端子-->
		<ns2:subClassOf>
			<ns1:Restriction>
				<ns1:onProperty rdf:resource="http://www.iec.ch/TC57/CIM#ConductingEquipment.Terminals" />
				<ns1:minCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</ns1:minCardinality>
			</ns1:Restriction>
		</ns2:subClassOf>
	</ns1:Class>
	<ns1:Class rdf:about="http://www.iec.ch/TC57/CIM#Terminal">
		<!--规则 2: 每个端子必须连接到一个导电设备-->
		<ns2:subClassOf>
			<ns1:Restriction>
				<ns1:onProperty rdf:resource="http://www.iec.ch/TC57/CIM#Terminal.ConductingEquipment" />
				<ns1:minCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</ns1:minCardinality>
			</ns1:Restriction>
		</ns2:subClassOf>
	</ns1:Class>
	<ns1:Class rdf:about="http://www.iec.ch/TC57/CIM#Terminal">
		<!--规则 3: 每个端子必须连接到一个连接节点-->
		<ns2:subClassOf>
			<ns1:Restriction>
				<ns1:onProperty rdf:resource="http://www.iec.ch/TC57/CIM#Terminal.ConnectivityNode" />
				<ns1:minCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</ns1:minCardinality>
			</ns1:Restriction>
		</ns2:subClassOf>
	</ns1:Class>
	<ns1:Class rdf:about="http://www.iec.ch/TC57/CIM#PowerTransformer">
		<!--规则 4: 每个变压器必须至少有两个绕组-->
		<ns2:subClassOf>
			<ns1:Restriction>
				<ns1:onProperty rdf:resource="http://www.iec.ch/TC57/CIM#PowerTransformer.PowerTransformerEnds" />
				<ns1:minCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">2</ns1:minCardinality>
			</ns1:Restriction>
		</ns2:subClassOf>
	</ns1:Class>
	<ns1:ObjectProperty rdf:about="http://www.iec.ch/TC57/CIM#EquipmentContainer.Equipments">
		<!--传递性规则: 设备容器的包含关系是传递的-->
		<rdf:type rdf:resource="http://www.w3.org/2002/07/owl#TransitiveProperty" />
	</ns1:ObjectProperty>
</rdf:RDF>